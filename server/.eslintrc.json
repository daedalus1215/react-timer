{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "no-underscore-dangle": 0,
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ]
    }
}